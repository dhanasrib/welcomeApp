<header class="snap-headerfooter">
		<% logo =  image_tag("snf-logo.gif", :alt => "snapfish logo", :align => "left") %>
		<%=link_to logo,root_path%>
        <h2 align="center">
			Snapfish	
		</h2><br/>
		<div width="100%" align="right" valign="top">
			<% if !signed_in? %>
			<%=link_to "Sign Up",signup_path %> | 
			<%=link_to "Log In",signin_path %> |
			<%else%>
			<%=link_to "log out",signout_path, :method => :delete %> |
			<%end%>
			<%=link_to "Help",welcome_help_path %> 
		</div>
</header>